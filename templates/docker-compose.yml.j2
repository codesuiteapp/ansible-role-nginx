version: "3"
services:
  nginx:
    image: ${DOCKER_IMAGE}
    container_name: nginx
    user: root
    ports:
      - "{{ nginx_http_port }}:8080"
      - "{{ nginx_https_port }}:8443"
    volumes:
      - {{ nginx_logs }}:/var/log/nginx
      - ./cert:/app/nginx/cert
      - ./html:/etc/nginx/html
      - ./conf/nginx.conf:/etc/nginx/nginx.conf
      - ./conf/sites-enabled:/etc/nginx/conf.d
    restart: unless-stopped
{% if use_extra_hosts %}
    extra_hosts:
    {% for host in extra_hosts %}
    - {{ host }}
    {% endfor %}
{% endif %}
{% if use_dkr_net %}
    networks:
      - {{ dkr_network }}

networks:
  {{ dkr_network }}:
    external: true
{% endif %}
