version: "3"
services:
  nginx:
    image: ${DOCKER_IMAGE}
    container_name: nginx
    user: root
    ports:
      - "{{ nginx_http_port }}:8080"
      - "{{ nginx_https_port }}:8443"
    volumes:
      - {{ nginx_logs }}:/applog/nginx
      - ./cert:/app/nginx/cert
      - ./html:/etc/nginx/html
      - ./conf/nginx.conf:/etc/nginx/nginx.conf
      - ./conf/sites-enabled:/etc/nginx/conf.d
    restart: unless-stopped
